@model IEnumerable<GestionMedicaAPP.Persistance.Models.System.NotificationsModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Notifications List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NotificationID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SentAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NotificationID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentAt)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.NotificationID }) |
                @Html.ActionLink("Details", "Details", new { id=item.NotificationID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.NotificationID })
            </td>
        </tr>
}
    </tbody>
</table>
